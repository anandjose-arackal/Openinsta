<div class="login-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class ="log-in.panel">
          <div class="panel-heading">
             <h2>Log in</h2>

                <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class=".panel-body">
                    <%= f.input :email, required: false, autofocus: true, class: 'input-lg' %>
                    <%= f.input :password, required: false, class: 'input-lg' %>
                    <%= f.input :remember_me, as: :boolean, class: 'input-lg' if devise_mapping.rememberable? %>

                    <%= f.button :submit, "Log in", class: 'btn-lg btn-info btn-block' %>
                  </div>
                <% end %>

                <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>